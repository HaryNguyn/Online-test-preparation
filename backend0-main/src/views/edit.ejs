<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update new user</title>
    <link rel="stylesheet" href=" /css/style.css">
</head>

<body>

    <div class="topnav">
        <a href="/">Home</a>
        <a href="/create" >Create Users</a>
    </div>
    <div class="form">
        <form action="/update-users" method="POST">
            <fieldset>
                <legend>Update a user</legend>
                <div class="input-group d-none">
                    <label for="">ID:</label>
                    <input type="text" name="userId" value="<%=userEdit.id %>">
                </div>
                <div class="input-group">
                    <label for="">Email:</label>
                    <input type="text" name="email" value="<%=userEdit.email %>">
                </div>
                <div class="input-group">
                    <label for="">Name:</label>
                    <input type="text" name="myname" value="<%=userEdit.name %>">
                </div>
                <div class="input-group">
                    <label for="">City:</label>
                    <input type="text" name="city" value="<%=userEdit.city %>">
                </div>
                <button type="submit" class="btn-save">Save</button>
            </fieldset>
        </form>
    </div>
</body>

</html>