<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home page</title>
    <link rel="stylesheet" href=" /css/style.css">
</head>
<style>
    .table-container {
        padding: 15px 20px;
    }

    .title {
        font-size: 25px;
        font-weight: 600;
        padding-bottom: 10px;
    }
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th,
    td {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    tr:hover {
        background-color: rgb(165, 160, 158);
    }
</style>
<body>
    <div class="topnav">
        <a class="active" href="/">Home</a>
        <a href="/create">Create Users</a>
    </div>
    <div class="table-container">
        <div class="title">List user</div>
    
        <table>
            <tr>
                <th>ID</th>
                <th>Email</th>
                <th>Name</th>
                <th>City</th>
                <th>Action</th>
            </tr>
            
            <% ListUsers.forEach(function(users) { %>
                <tr>
                    <td><%= users.id %></td>
                    <td><%= users.email %></td>
                    <td><%= users.name %></td>
                    <td><%= users.city %></td>
                    <td>
                        <a href="/update/<%= users.id %>">Edit</a>
                        <form action="/delete-user/<%= users.id %>" method="POST">
                            <button>Delete</button>
                        </form>
                    </td>
                </tr>
            <% }); %>
            
        </table>
    </div>
</body>
</html>